<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.puze.weddingphotobook">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".FindActivity"></activity>
        <activity android:name=".ThumbnailActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Epub.MainActivity" ></activity>
        <activity android:name=".Epub.FileChooser" >
        </activity>
        <activity
            android:name=".Epub.BookView"
            android:label="@string/title_activity_book_view" >
        </activity>
        <activity
            android:name=".Epub.DataView"
            android:label="@string/title_activity_data_view" >
        </activity>
        <activity
            android:name=".Epub.AudioView"
            android:label="@string/title_activity_audio_view" >
        </activity>
    </application>

</manifest>